{
	"name":			"ronnyjss/traducao",
	"description":	"Biblioteca para importar gettext de arquivos PO.",
	"homepage":		"https://github.com/ronnyjss/traducao",
	"keywords":		["gettext", "i18n", "translation", "po"],
	"license":		"MIT",
	"type":			"library",
	"authors": [{
		"name":		"RonnyJSS",
		"role":		"Developer",
		"email":	"ronny@jss.art.br",
		"homepage":	"https://github.com/ronnyjss"
	}],
    "support": {
        "email":	"ronny@jss.art.br",
        "issues":	"https://github.com/ronnyjss/traducao/issues"
    },
	"require": {
		"php":				"^7.2|^8.0",
		"gettext/gettext":	"^5.6"
	},
    "require-dev": {
		"phpunit/phpunit": "^8.0|^9.0"
    },
	"autoload": {
		"psr-4": {
			"ronnyjss\\": "src"
		},
		"files": [
			"src/constante.php",
			"src/funcao.php",
			"src/inicializar.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"ronnyjss\\traducao\\teste\\": "tests"
		}
	},
	"scripts": {
		"teste": [
			"phpunit"
		]
    }
}
